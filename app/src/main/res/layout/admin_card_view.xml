<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:android ="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:layout_marginTop="35dp"
    android:id="@+id/admin_cardview_layout">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/card_view_display"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/White">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_textview1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:text="Order from Shrest"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardview_textview2"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:text="View Order"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/admin_orderpacked_btn"
                android:padding="1dp"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:text="Order Packed"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

