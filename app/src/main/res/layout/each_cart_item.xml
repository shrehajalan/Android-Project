<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:android ="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:layout_marginTop="35dp"
    android:id="@+id/cart_cardview_layout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/cart_card"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cart_ll1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/cart_ll2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/cart_ll3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STYLE ID:"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cart_style_id"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cart_price"
                    android:layout_marginLeft="10dp"
                    android:textSize="20sp"
                    android:layout_margin="5dp"
                    android:gravity="center"/>
            </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/cart_add_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_grey"
                android:padding="2dp"
                android:text="+"
                android:textSize="30dp" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/cart_number_btn"
                android:padding="2dp"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/cart_minus_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rectangle_grey"
                android:padding="2dp"
                android:text="-"
                android:textSize="30dp"/>
            
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:id="@+id/cart_ll4">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Update"
                android:id="@+id/cart_update"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete"
                android:id="@+id/cart_delete"/>

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
</LinearLayout>

























